<div class="col-sm-6 col-lg-4 col-xl-3 mb-3 node-card">
    <div class="card h-100">
        <div class="img-container rounded-top">
            <img src="{{ asset(card.getFirstImage().path) }}" class="card-img-adjust card-img-top" alt="card">
        </div>
        <div class="card-body d-flex flex-column justify-content-between align-items-start">
            <div>
                <h5 class="card-title text-dark">{{ card.getTitle() }}</h5>
                <p class="card-text text-secondary">{{ card.getDescription() }}</p>
            </div>
            <div>
                <a href="{{ path(
                    'app_main_show_card',
                    {'subject': card.getSubject().getName(), 'cardId': card.getId()}
                ) }}" class="btn btn-primary mt-3">Learn more</a>
            </div>
        </div>
    </div>
</div>
