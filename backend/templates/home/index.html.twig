{% extends 'base.html.twig' %}

{% block title %}Mind Maps{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    {{ include('common/navbar.html.twig', {'subjects': subjects}) }}

    <!-- BANNER -->
    <div class="jumbotron jumbotron-main jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-light banner-text">What do I want to learn today?</h1>
            <p class="lead text-light banner-text">Select a card to start!</p>
        </div>
    </div>

    {{ include('common/search-box.html.twig') }}

    <!-- CARDS -->
    <section class="container mb-5">
        <div class="row">
            {% for subject in subjects %}
                {{ include('card/subject-card.html.twig', {'subject': subject}) }}
            {% endfor %}
        </div>
    </section>

    {{ include('common/footer.html.twig') }}
{% endblock body %}

{% block javascripts %}
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
{% endblock javascripts %}
